<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/titel"
        android:layout_width="186dp"
        android:layout_height="35dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="8dp"
        android:textSize="20sp"
        android:text="@string/TitelEvenementen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="347dp"
        android:layout_height="63dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="8dp"
        android:text="Informatie over uw geselecteerde evenement"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titel" />

    <GridLayout
        android:id="@+id/RensGridInfoEvent"
        android:layout_width="308dp"
        android:layout_height="296dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4">

        <TextView
            android:id="@+id/RensInfoEventNaam"
            android:layout_width="98dp"
            android:layout_height="40dp"
            android:text="Naam:"
            android:textSize="24sp"
            tools:layout_editor_absoluteX="81dp"
            tools:layout_editor_absoluteY="321dp" />

        <TextView
            android:id="@+id/RensInfoEventInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:text="Info:"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/RensInfoEventDate"
            android:layout_width="81dp"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="0"
            android:text="Datum:"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/Rensnaaminvul"
            android:layout_width="285dp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="1"
            android:ems="10"
            android:hint="Naam van het event"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/Rensinfoinvul"
            android:layout_width="wrap_content"
            android:layout_height="72dp"
            android:layout_row="1"
            android:layout_column="1"
            android:ems="10"
            android:inputType="textMultiLine" />

        <TextView
            android:id="@+id/Rensdatuminvul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="1"
            android:ems="10"
            android:hint="Datum van het event"
            android:inputType="date" />


    </GridLayout>


</android.support.constraint.ConstraintLayout>