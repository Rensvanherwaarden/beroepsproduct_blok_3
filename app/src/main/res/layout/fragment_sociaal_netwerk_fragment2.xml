<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ConstraintLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SociaalNetwerkFragment2">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="410dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/serviButton1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tekst2TextView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/serviSNImageButton1"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@android:color/transparent"
                android:scaleType="fitXY"
                android:src="@drawable/sn1" />

            <TextView
                android:id="@+id/serviSNTextView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Amusementzoekers"
                android:textAllCaps="true" />

            <ImageButton
                android:id="@+id/serviSNImageButton2"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@android:color/transparent"
                android:scaleType="fitXY"
                android:src="@drawable/sn2" />

            <TextView
                android:id="@+id/serviSNTextView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Levensgenieters"
                android:textAllCaps="true" />

            <ImageButton
                android:id="@+id/serviSNImageButton3"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@android:color/transparent"
                android:scaleType="fitXY"
                android:src="@drawable/sn3" />
            <TextView
                android:id="@+id/serviSNTextView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Discodansers"
                android:textAllCaps="true" />
            <ImageButton
                android:id="@+id/serviSNImageButton4"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@android:color/transparent"
                android:scaleType="fitXY"
                android:src="@drawable/sn4" />
            <TextView
                android:id="@+id/serviSNTextView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Plantenhouders"
                android:textAllCaps="true" />
            <ImageButton
                android:id="@+id/serviSNImageButton5"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@android:color/transparent"
                android:scaleType="fitXY"
                android:src="@drawable/sn5" />
            <TextView
                android:id="@+id/serviSNTextView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Liefhebbers van eten"
                android:textAllCaps="true" />
            <ImageButton
                android:id="@+id/serviSNImageButton6"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@android:color/transparent"
                android:scaleType="fitXY"
                android:src="@drawable/sn6" />
            <TextView
                android:id="@+id/serviSNTextView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tabletgebruikers"
                android:textAllCaps="true" />
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/tekst1TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginLeft="44dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="43dp"
        android:layout_marginRight="43dp"
        android:layout_marginBottom="8dp"
        android:text="@string/TitelSociaalNetwerk"
        android:textAllCaps="true"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tekst2TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tekst2TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="91dp"
        android:layout_marginLeft="91dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="90dp"
        android:layout_marginRight="90dp"
        android:text="Kies een netwerk"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tekst1TextView" />

    <Button
        android:id="@+id/serviButton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:text="@string/terugknop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

</android.support.constraint.ConstraintLayout>